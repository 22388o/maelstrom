<Pay>:
	cols: 3
	rows: 8
	padding: 10
	Widget:
    Image:
    	source: 'ui/img/logo.png'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
        	text: 'Scan'
        	text_size: self.size
            halign: 'center'
            valign: 'middle'
        	on_press: root.manager.show_scan()
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        TextInput:
            hint_text: 'Paste invoice'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_text: root.show_payment_details(self.text)
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            text: 'Go back'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: root.manager.show_home()
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 2.6
        cols: 1
        rows: 1
        padding: 15
        Label:
            id: payment_details
            text_size: self.size
            text: ''
            halign: 'left'
            valign: 'top'
            markup: True
            font_size: '15sp'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            id: pay
        	text: 'Pay'
        	text_size: self.size
            halign: 'center'
            valign: 'middle'
        	on_press: root.pay()
    Widget:
