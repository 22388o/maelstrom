<Pay>:
	cols: 3
	rows: 8
	padding: 10
	Widget:
    Image:
    	source: 'ui/img/logo.png'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
        	text: 'Scan'
        	on_press: root.manager.show_scan()
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        TextInput:
            hint_text: 'Paste invoice'
            on_text: root.check_invoice(self.text)
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            text: 'Go back'
            on_press: root.manager.show_home()
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 2.6
        cols: 1
        rows: 1
        padding: 15
        Label:
            id: payment_details
            text: ''
            halign: 'left'
            valign: 'top'
            markup: True
            font_size: '20sp'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            id: pay
        	text: 'Pay'
    Widget:
