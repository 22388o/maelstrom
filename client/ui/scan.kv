#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol
<Scan>:
    orientation: 'vertical'

    GridLayout:
        cols: 3
        rows: 1
        size_hint: 1.0, 0.2
        Widget:
        Image:
    	    source: 'ui/img/logo.png'
        Widget:

    ZBarCam:
        id: zbarcam
        # optional, by default checks all types
        code_types: ZBarSymbol.QRCODE,
        on_symbols: root.scanned()

    GridLayout:
        cols: 3
        rows: 1
        size_hint: 1.0, 0.2
        padding: 5
        Widget:
        Button:
            text: 'Go back'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: root.manager.show_pay()
        Widget:
