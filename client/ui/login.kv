<Login>:
    name: 'login'
    cols: 3
	rows: 8
	padding: 10
	Widget:
    Image:
    	source: 'ui/img/logo.png'
    	size_hint: 6.5, 1.3
    Widget:

    Widget:
    Widget:
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Label:
            id: client_cert
            text: 'Enter the following characters on the node : '
            text_size: self.size
            halign: 'center'
            valign: 'middle'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        TextInput:
            id: node_cert
            hint_text: 'Enter the characters output by the node'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        GridLayout:
            cols: 2
            rows: 1
            padding: 5
            TextInput:
                id: ip
                input_type: 'number'
                multiline: False
                hint_text: 'IP'
                text: root.manager.app.config.get('connection', 'ip')
            TextInput:
                id: port
                multiline: False
                hint_text: 'Port (default:8002)'
                text: root.manager.app.config.get('connection', 'port')
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            id: connect
            text: 'Connect to c-simple server'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: root.connect()
    Widget:

    Widget:
    Label:
        id: error
        text: ''
        text_size: self.size
        color: (1, 0, 0, 1)
    Widget:
