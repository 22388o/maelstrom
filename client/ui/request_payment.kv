<RequestPayment>:
	cols: 3
	rows: 9
	padding: 10
	Widget:
    Image:
        size_hint: 6.5, 1.3
    	source: 'ui/img/logo.png'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        TextInput:
            id: amount
        	hint_text: 'Amount in satoshis'
        	text_size: self.size
        	input_type: 'number'
            halign: 'center'
            valign: 'middle'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        TextInput:
            id: description
            hint_text: 'Description (optional)'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            id: gen
        	text: 'Request'
        	text_size: self.size
            halign: 'center'
            valign: 'middle'
        	on_release: root.gen_qrcode()
    Widget:

    Widget:
    GridLayout:
        id: qrcode_container
        cols: 1
        rows: 1
        padding: 1
        size_hint: 6.5, 4.5
    Widget:

    Widget:
    GridLayout:
        size_hint: 6.5, 1.3
        cols: 1
        rows: 1
        padding: 10
        Button:
            text: 'Go back'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_release: root.manager.show_home()
    Widget:
